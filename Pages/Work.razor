@page "/work"
@inject ProjectServices projectServices

<section class="py-12 ">
    <!-- Header -->
    <HeaderSecond>
        My Projects
    </HeaderSecond>
    
    <!-- Projects -->
  <div class="mt-3 columns-1 gap-6 text-center text-gray-800 dark:text-white md:columns-2">
    @foreach (var project in Projects)
    {
       <div class="col-span-1"><ProjectCard project="@project" /></div>
    }  
</div>

   
</section>

@code {
    private List<Project> Projects;
    
    protected override void OnInitialized()
    {
        // Fetching projects
        Projects = projectServices.GetProjects();
    }
}
